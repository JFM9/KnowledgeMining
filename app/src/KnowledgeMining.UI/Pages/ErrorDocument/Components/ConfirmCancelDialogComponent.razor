<style>
    p {
        margin-top: 10px;
    }
</style>

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Color="Color.Warning" Icon="@Icons.Material.Filled.WarningAmber"></MudIcon>
            Unsaved Changes
        </MudText>
    </TitleContent>
    <DialogContent>
        Are you sure you want to leave this page? Unsaved changes will not be saved.
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">No, stay on this page</MudButton>
        <MudButton Color="Color.Error" OnClick="Leave">Yes, leave Anyway</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Leave() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
