<MudPaper Elevation="0" Class="mb-4"> 
    <MudStack Justify="Justify.FlexStart" Row="true" AlignItems="AlignItems.Start">        
        <MudSwitch Checked="Active" @bind-CheckedChanged="ActiveChanged" Color="Color.Success" />

        <MudStack Style="@GetStyle()"> 
            <MudStack Row="true">
                <MudImage Src="@ImagePath" Height="64" />

                <MudStack Spacing="0">
                    <MudText Typo="Typo.h5">@Title</MudText>
                    <MudText Typo="Typo.body2">Produces a summary by extracting salient sentences within the document.</MudText>
                </MudStack>

            </MudStack>
        </MudStack>
    </MudStack>
</MudPaper>

@code {
    [Parameter] public bool Active { get; set; } = false;
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Description { get; set; }
    [Parameter] public string? ImagePath { get; set; }

    [Parameter]
    public EventCallback<bool> ActiveChanged { get; set; }

    private bool _active;

    private string GetStyle()
    {
        return "width:100%;opacity:" + (Active ? "1" : "0.5");
    }

    private void CheckedChanged()
    {
        ActiveChanged.InvokeAsync(Active);
    }
}
